{
  "expo": {
    "name": "MoodFlow - Mood Tracker",
    "slug": "MoodFlow2",
    "version": "1.0.0",
    "description": "Track your emotions, understand your patterns, and improve your mental well-being with MoodFlow.",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "moodflow2",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "primaryColor": "#0ea5e9",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0ea5e9"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
